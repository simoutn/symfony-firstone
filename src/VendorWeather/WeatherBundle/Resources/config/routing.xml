<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="weather_homepage" path="/">
        <default key="_controller">WeatherBundle:Default:index</default>
    </route>
    
    <route id="weather_dashbord" path="/admin">
        <default key="_controller">WeatherBundle:Dashbord:index</default>
    </route>
    <route id="weather_region" path="/admin">
        <default key="_controller">WeatherBundle:Region:index</default>
    </route>
    <route id="weather_region_edit" path="/region/{id}/edit">
        <default key="_controller">WeatherBundle:Region:edit</default>
    </route>
    
</routes>
